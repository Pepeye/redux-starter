{
  "name": "react-starterkit",
  "version": "0.0.1",
  "description": "React Starter - Babel, ES6/ES7, Webpack, Jest, FlowType",
  "main": "index.js",
  "author": "Pepeye <gaofolaju@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "better-npm-run dev",
    "build": "npm run clean && npm run build:app",
    "build:app": "better-npm-run build:app",
    "clean": "rimraf dist",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "test": "jest --coverage",
    "watch:test": "jest --watch --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/*.js",
      "tests/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "verbose": true
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-react-jsx-self": "^6.11.0",
    "babel-plugin-transform-react-jsx-source": "^6.9.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-runtime": "^6.18.0",
    "better-npm-run": "^0.0.12",
    "css-loader": "^0.25.0",
    "cssnano": "^3.8.0",
    "debug": "^2.2.0",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-flowtype": "^2.23.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.33.0",
    "fs-extra": "^0.30.0",
    "html-webpack-plugin": "^2.24.0",
    "jest": "^16.0.2",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "postcss-cssnext": "^2.8.0",
    "postcss-loader": "^1.0.0",
    "react-redux": "^4.4.5",
    "react-test-renderer": "^15.3.2",
    "redux": "^3.6.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.13.1",
    "yargs": "^6.3.0"
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0"
  },
  "betterScripts": {
    "build:app": {
      "command": "node bin/run",
      "env": {
        "NODE_ENV": "production",
        "RUN_TASK": "compile",
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon --watch src build/tasks/watch.js --exec babel-node",
      "env": {
        "NODE_ENV": "development",
        "RUN_TASK": "watch",
        "DEBUG": "app:*"
      }
    }
  }
}
